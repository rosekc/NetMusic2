<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/base_red</item>
        <item name="colorPrimaryDark">@color/base_red</item>
        <item name="colorAccent">@color/base_red</item>
    </style>

    <style name="MyFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--侧滑栏下面三个字体的样式-->
    <style name="draw_left_buttom_font_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!--侧滑栏左侧菜单字体的样式-->
    <style name="draw_left_font_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!--侧滑栏左侧图标样式-->
    <style name="draw_image_ic_style">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/draw_gray</item>
    </style>
    <!--侧滑栏layout样式-->
    <style name="draw_layout">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!--侧滑栏下图标样式-->
    <style name="draw_left_image_ic_style">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/black</item>
    </style>

    <!--聊天信息时间-->
    <style name="chat_msgtime">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!--“我的”页面五个Layout样式-->
    <style name="music_layout_style">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">13dp</item>
    </style>
    <!--“我的”页面五个按钮字体样式-->
    <style name="music_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#303030</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>
</resources>
