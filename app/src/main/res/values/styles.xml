<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/base_red</item>
        <item name="colorPrimaryDark">@color/base_red</item>
        <item name="colorAccent">@color/base_red</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--侧滑栏下面三个字体的样式-->
    <style name="draw_left_buttom_font_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!--侧滑栏左侧菜单字体的样式-->
    <style name="draw_left_font_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!--侧滑栏左侧图标样式-->
    <style name="draw_image_ic_style">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/draw_gray</item>
    </style>
    <!--侧滑栏layout样式-->
    <style name="draw_layout">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!--侧滑栏下图标样式-->
    <style name="draw_left_image_ic_style">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/black</item>
    </style>


</resources>
