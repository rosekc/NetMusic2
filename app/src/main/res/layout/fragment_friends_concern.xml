<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/friends_label"
        android:text="@string/friends_label_addfriends" />

    <LinearLayout
        style="@style/friends_item1">
        <ImageView style="@style/friends_item_headicon"
            android:src="@mipmap/ic_acquaintance"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                style="@style/friends_item_name1"
                android:text="@string/acquaintance"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/split"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/friends_item1">
        <ImageView style="@style/friends_item_headicon"
            android:src="@mipmap/ic_star"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                style="@style/friends_item_name1"
                android:text="@string/star"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/split"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/friends_item1">
        <ImageView style="@style/friends_item_headicon"
            android:src="@mipmap/ic_musician"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                style="@style/friends_item_name1"
                android:text="@string/musician"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/split"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/friends_item1">
        <ImageView style="@style/friends_item_headicon"
            android:src="@mipmap/ic_player"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                style="@style/friends_item_name1"
                android:text="@string/player"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/split"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        style="@style/friends_label"
        android:text="@string/friends_label_myconcern" />
    <ListView
        android:id="@+id/friends_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#00000000"
        android:dividerHeight="0dp">

    </ListView>
</LinearLayout>