<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:gravity="center_vertical">
    <!--消息通知-->
    <!--专辑图标-->
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/notification_ablum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_default_ablum"/>
    </LinearLayout>


    <!--歌名歌手-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/musicname"
            android:textColor="#303030"
            android:textSize="14sp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/notification_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/musicartist"
            android:textSize="12sp"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">


        <ImageView
            android:id="@+id/notification_play_prev"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_box_next_pev"
            android:tint="@color/draw_gray"
            android:layout_marginRight="10dp"
            android:rotation="180"/>

        <ImageView
            android:id="@+id/notification_play_state"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_box_play"
            android:tint="@color/draw_gray"/>
        <ImageView
            android:id="@+id/notification_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_box_next_pev"
            android:tint="@color/draw_gray"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>


</LinearLayout>
